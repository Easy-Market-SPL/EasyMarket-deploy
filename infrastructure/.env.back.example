######################################################################################
# This file is used to set environment variables for the back-end application.
# Please do not edit this file directly. Instead, use the .env file in the root directory.
######################################################################################
# SPRING CLOUD
SPRING_CONFIG_IMPORT="configserver:http://config-server:8888"
EUREKA_URL="http://discovery:8761/eureka/"

##################
# DB CONFIGURATION
##################
# set up the database connection
DB_USERNAME="username"
DB_PASSWORD="your-db-password"
DB_NAME="db_name"
DB_URL="jdbc:postgresql://postgres:5432/db_name"

##################
# MAIL
##################
# NOTE: Obtained from Google Account settings: https://myaccount.google.com/apppasswords
MAIL_PASSWORD="your-app-password"

# GH auth
# obtained from GitHub settings: https://github.com/settings/tokens
GH_CONFIG_USERNAME="account"
GH_CONFIG_PAT="your-pat"
# url of the repository where the configuration is stored
GH_CONFIG_URI="https://github.com/Easy-Market-SPL/back-config"